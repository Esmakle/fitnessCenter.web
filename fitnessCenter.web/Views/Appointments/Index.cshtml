@model IEnumerable<fitnessCenter.web.Models.Appointment>

@{
    ViewData["Title"] = "Randevular";
}


<h1>Randevular</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Randevu Oluştur</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Üye</th>
            <th>Eğitmen</th>
            <th>Hizmet</th>
            <th>Başlangıç Zamanı</th>
            <th>Bitiş Zamanı</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Member?.AdSoyad</td>
                <td>@item.Trainer?.AdSoyad</td>
                <td>@item.Service?.Ad</td>
                <td>@item.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.EndTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    @item.Status
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
