@model IEnumerable<fitnessCenter.web.Models.Member>

@{
    ViewData["Title"] = "Üyeler";
}

<h1>Üyeler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Üye Oluştur</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AdSoyad)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Telefon)</th>
            <th>@Html.DisplayNameFor(model => model.Cinsiyet)</th>
            <th>@Html.DisplayNameFor(model => model.DogumTarihi)</th>
            <th>@Html.DisplayNameFor(model => model.KayitTarihi)</th>
            <th>Fitness Center</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AdSoyad</td>
                <td>@item.Email</td>
                <td>@item.Telefon</td>
                <td>@item.Cinsiyet</td>
                <td>@(item.DogumTarihi?.ToString("dd.MM.yyyy"))</td>
                <td>@item.KayitTarihi.ToString("dd.MM.yyyy")</td>
                <td>@item.FitnessCenter?.Ad</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
