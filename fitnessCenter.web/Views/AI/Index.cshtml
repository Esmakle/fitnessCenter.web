@model fitnessCenter.web.Models.ViewModels.AiSuggestViewModel

@{
    ViewData["Title"] = "Randevu AI";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <h2 class="display-5 mb-4 text-center">
                <span style="color: var(--primary-green)">RANDEVU</span> AI
            </h2>

            <form asp-action="Index" method="post" class="card p-4 ai-card">
                <p class="text-muted small mb-2">
                    Hedefinizi yazın, size özel yeşil bölge planınızı yapalım.
                </p>

                <!-- ✅ YAZI YAZILACAK ALAN -->
                <textarea asp-for="Prompt"
                          class="form-control ai-input"
                          rows="3"
                          placeholder="Örn: Haftada 3 gün yağ yakımı + kas sıkılaşma, dizim hassas..."></textarea>
                <span asp-validation-for="Prompt" class="text-danger small"></span>

                <button type="submit" class="btn btn-primary w-100 mt-3">
                    Analiz Et ve Öneri Al
                </button>
            </form>

            @if (!string.IsNullOrWhiteSpace(Model?.Result))
            {
                <div class="ai-result-container shadow-lg mt-4">
                    <h4 class="mb-3" style="color: var(--primary-green)">AI Koç Önerisi</h4>
                    <div class="ai-result-content">
                        @Model.Result
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
