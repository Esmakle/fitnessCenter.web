@using System.Linq
@model IEnumerable<fitnessCenter.web.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Müsaitlikler";
}

<h1>Eğitmen Müsaitlikleri</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Müsaitlik Ekle</a>
</p>

@if (!Model.Any())
{
    <p>Henüz tanımlanmış bir müsaitlik yok.</p>
}
else
{
    // Eğitmen adına göre grupluyoruz
    var grouped = Model
        .OrderBy(m => m.Trainer.AdSoyad)
        .ThenBy(m => m.DayOfWeek)
        .ThenBy(m => m.StartTime)
        .GroupBy(m => m.Trainer.AdSoyad);

    foreach (var trainerGroup in grouped)
    {
        <h4 class="mt-4">@trainerGroup.Key</h4>

        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Gün</th>
                    <th>Başlangıç</th>
                    <th>Bitiş</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in trainerGroup)
                {
                    <tr>
                        <td>@item.DayOfWeek</td>
                        <td>@item.StartTime</td>
                        <td>@item.EndTime</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
