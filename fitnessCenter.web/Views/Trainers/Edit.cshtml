@model fitnessCenter.web.Models.Trainer

@{
    ViewData["Title"] = "Eğitmen Düzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">

            <div class="card p-4 shadow-lg">
                <div class="d-flex justify-content-between align-items-start gap-3 mb-3">
                    <div>
                        <h2 class="mb-1 text-white">Eğitmen Düzenle</h2>
                        <p class="text-muted mb-0">Bilgileri güncelle ve kaydet.</p>
                    </div>
                    <a asp-action="Index" class="btn btn-outline-light">Listeye Dön</a>
                </div>

                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="FitnessCenterId" class="form-label"></label>
                        <select asp-for="FitnessCenterId"
                                class="form-select"
                                asp-items="ViewBag.FitnessCenterId">
                        </select>
                        <span asp-validation-for="FitnessCenterId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AdSoyad" class="form-label"></label>
                        <input asp-for="AdSoyad" class="form-control" />
                        <span asp-validation-for="AdSoyad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UzmanlikNotu" class="form-label"></label>
                        <input asp-for="UzmanlikNotu" class="form-control" />
                        <span asp-validation-for="UzmanlikNotu" class="text-danger"></span>
                    </div>

                    <!-- ✅ Yeni alan: ImageUrl -->
                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                        <input asp-for="ImageUrl"
                               class="form-control"
                               placeholder="https://images.unsplash.com/..." />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>

                        <!-- Önizleme -->
                        @{
                            var preview = !string.IsNullOrWhiteSpace(Model.ImageUrl)
                            ? Model.ImageUrl
                            : "https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=900&auto=format&fit=crop";
                        }
                        <div class="mt-3">
                            <div class="text-muted small mb-2">Önizleme</div>
                            <div style="border:1px solid rgba(255,255,255,.08); border-radius:16px; overflow:hidden;">
                                <img src="@preview" alt="Trainer preview"
                                     style="width:100%; height:220px; object-fit:cover; display:block;" />
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary px-4">Kaydet</button>
                        <a asp-action="Index" class="btn btn-outline-light">İptal</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
