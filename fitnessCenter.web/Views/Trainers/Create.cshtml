@model fitnessCenter.web.Models.Trainer

@{
    ViewData["Title"] = "Yeni Eğitmen";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card p-4 shadow-lg">
                <h2 class="mb-1 text-white">Yeni Eğitmen</h2>
                <p class="text-muted mb-4">Eğitmen bilgilerini doldurun.</p>

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="FitnessCenterId" class="form-label"></label>
                        <select asp-for="FitnessCenterId"
                                class="form-select"
                                asp-items="ViewBag.FitnessCenterId">
                        </select>
                        <span asp-validation-for="FitnessCenterId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AdSoyad" class="form-label"></label>
                        <input asp-for="AdSoyad" class="form-control" />
                        <span asp-validation-for="AdSoyad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UzmanlikNotu" class="form-label"></label>
                        <input asp-for="UzmanlikNotu" class="form-control" />
                        <span asp-validation-for="UzmanlikNotu" class="text-danger"></span>
                    </div>

                    <!-- ✅ Yeni alan: ImageUrl -->
                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://images.unsplash.com/..." />
                        <div class="form-text text-muted">
                            Örnek: Unsplash linki yapıştır.
                        </div>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary px-4">Kaydet</button>
                        <a asp-action="Index" class="btn btn-outline-light">Listeye Dön</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
