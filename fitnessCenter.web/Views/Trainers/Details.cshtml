@model fitnessCenter.web.Models.Trainer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trainer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FitnessCenter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FitnessCenter.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdSoyad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UzmanlikNotu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UzmanlikNotu)
        </dd>
    </dl>
</div>
@if (User.Identity != null && User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
{
    <a class="btn btn-primary"
       asp-controller="Appointments"
       asp-action="Create"
       asp-route-trainerId="@Model.Id">
        Randevu Al
    </a>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
