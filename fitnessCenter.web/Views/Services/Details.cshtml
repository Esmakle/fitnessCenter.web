@model fitnessCenter.web.Models.Service

@{
    ViewData["Title"] = "Hizmet Detayı";
    var isTrainer = User.IsInRole("Trainer");
}

<h1>Hizmet Detayı</h1>

<div>
    <h4>@Model.Ad</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Süre (Dakika)
        </dt>
        <dd class="col-sm-10">
            @Model.SureDakika
        </dd>
        <dt class="col-sm-2">
            Ücret
        </dt>
        <dd class="col-sm-10">
            @Model.Ucret
        </dd>
    </dl>
</div>

<div>
    @if (isTrainer)
    {
        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Sil</a>
    }

    <a class="btn btn-link" asp-action="Index">Listeye dön</a>
</div>
